{
  "name": "farmers-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "pretest": "docker-compose run app sh -c 'npx sequelize-cli db:create --config src/config/sequelize-cli-config.js --env test | grep -v \"database \\\"farmer_db_test\\\" already exists\" || true' && docker-compose run app npx sequelize-cli db:migrate --config src/config/sequelize-cli-config.js --migrations-path src/migrations --env test",
    "test": "docker-compose run -e NODE_ENV=test -e TEST_DB_HOST=db_test -e TEST_DB_PORT=5432 app jest --config jest.config.js",
    "db:create": "sequelize db:create --config src/config/sequelize-cli-config.js",
    "migrate:undo": "sequelize db:migrate:undo --config src/config/sequelize-cli-config.js --migrations-path src/migrations",
    "migrate": "sequelize db:migrate --config src/config/sequelize-cli-config.js --migrations-path src/migrations",
    "generate": "sequelize migration:generate --migrations-path src/migrations --name",
    "db:drop": "sequelize db:drop --config src/config/sequelize-cli-config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettier": "prettier --write src/**/*.ts",
    "swagger": "swagger-jsdoc -d swaggerDef.js -o swagger.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.0.1",
    "pg": "^8.11.5",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "eslint": "^9.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
